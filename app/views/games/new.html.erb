<h1>Longest Word Game</h1>

<% @letters.each do |letter| %>
  <div class="letter"><%= letter %></div>
<% end %>

<form class="input" action="/score" method="post" data-turbo="false">
  <label class="form-label" for="word">What is the longes word you can find?</label>
  <div class="input-group mt-3">
    <input id="word" type="text" class="form-control" placeholder="Word" aria-label="Word" aria-describedby="choosen Word">
    <button class="btn btn-outline-secondary">Play</button>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
